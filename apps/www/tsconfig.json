{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@/plate/*": ["./lib/plate/*"],
      "contentlayer/generated": ["../.contentlayer/generated"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cts",
    "**/*.ctsx",
    "**/*.mts",
    "**/*.mtsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.cjs",
    "**/*.cjsx",
    "**/*.mjs",
    "**/*.mjsx",
    ".next/types/**/*.ts",
    ".contentlayer/generated"
  ],
  "exclude": ["node_modules", "./scripts/build-registry.mts", "__registry__"]
}
